{
  "name": "ksh-website",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "predev": "npm run typegen",
    "dev:next": "next dev",
    "dev:server": "nodemon --exec \"ts-node --project tsconfig.server.json --transpile-only\" server/index.ts",
    "dev:both": "concurrently \"npm run dev:next\" \"npm run dev:server\"",
    "prebuild": "npm run typegen",
    "build:next": "next build",
    "build:server": "tsc -p tsconfig.server.json",
    "build": "npm run build:next && npm run build:server",
    "start:next": "next start",
    "start:server": "node dist/server/index.js",
    "start:both": "concurrently \"npm run start:next\" \"npm run start:server\"",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "build:analyze": "ANALYZE=true npm run build",
    "clean": "rm -rf .next out coverage dist",
    "typegen": "sanity schema extract --path=src/sanity/extract.json --project $SANITY_PROJECT_ID --dataset $SANITY_DATASET && sanity typegen generate"
  },
  "dependencies": {
    "@lottiefiles/react-lottie-player": "^3.6.0",
    "@portabletext/react": "^3.2.4",
    "@sanity/client": "^6.29.1",
    "@sanity/image-url": "^1.1.0",
    "@sanity/vision": "^3.86.1",
    "aos": "^2.3.4",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dompurify": "^3.2.7",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "file-type": "^16.5.4",
    "framer-motion": "^12.19.1",
    "helmet": "^8.1.0",
    "jsdom": "^27.0.0",
    "lucide-react": "^0.503.0",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "next": "^15.3.2",
    "next-sanity": "^9.12.3",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "sanitize-html": "^2.17.0",
    "sanity": "^3.86.1",
    "styled-components": "^6.1.17",
    "tailwindcss-animate": "^1.0.7",
    "validator": "^13.15.15",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.10",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/jsdom": "^27.0.0",
    "@types/morgan": "^1.9.10",
    "@types/multer": "^2.0.0",
    "@types/sanitize-html": "^2.16.0",
    "@types/supertest": "^6.0.3",
    "@types/validator": "^13.15.3",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "eslint": "9.37.0",
    "eslint-config-next": "15.5.4",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "nodemon": "^3.1.10",
    "postcss": "^8.5.6",
    "supertest": "^7.1.4",
    "tailwindcss": "^4.1.10",
    "ts-node": "^10.9.2",
    "typescript": "5.8.3"
  }
}
